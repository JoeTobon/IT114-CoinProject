<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.joe.coinproject">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addCoin"
            android:label="@string/title_activity_add_coin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".removeCoin"
            android:label="@string/title_activity_remove_coin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DisplayCoin"
            android:label="@string/title_activity_display_coin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadList"
            android:label="@string/title_activity_load_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SaveList"
            android:label="@string/title_activity_save_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>